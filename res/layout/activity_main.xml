<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xixixi.sweetweather.MainActivity" >
<LinearLayout 
    android:id="@+id/main_location_area"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView 
        android:id="@+id/location_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>  
    <Button 
        android:id="@+id/main_refresh_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="refresh"/>
    
</LinearLayout>
<LinearLayout
    android:id="@+id/realtime_weather"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/main_location_area"
    android:orientation="vertical"
    android:background="#00ff00">
    <TextView 
        android:id="@+id/realtime_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView 
        android:id="@+id/realtime_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView 
        android:id="@+id/realtime_wd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView 
        android:id="@+id/realtime_ws"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>    
    <TextView 
        android:id="@+id/realtime_sd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView 
        android:id="@+id/realtime_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>  
    
</LinearLayout>
<TextView 
    android:id="@+id/main_state"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/realtime_weather"
    />
<ListView 
    android:id="@+id/main_weather_list"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/realtime_weather"
    android:background="#ff0000"></ListView>


</RelativeLayout>
